<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvsec"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000"
        android:text="22"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textAlignment="viewEnd"
        android:padding="10dp"
        android:layout_weight="1">
    </TextView>

    <TextView
        android:id="@+id/tvmain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000"
        android:text="22"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textAlignment="viewEnd"
        android:padding="10dp"
        android:layout_weight="1">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/ACBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="AC"
                        android:textSize="20dp"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/orange">
                    </Button>
                    <Button
                        android:id="@+id/CBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="C"
                        android:textSize="20dp"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/orange">
                    </Button>
                    <Button
                        android:id="@+id/opnBracBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="("
                        android:textSize="20dp"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/orange">
                    </Button>
                    <Button
                        android:id="@+id/clsBracBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text=")"
                        android:textSize="20dp"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/orange">
                    </Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="5"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/sinBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="sin"
                        android:textSize="20dp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/orange">
                    </Button>
                    <Button
                        android:id="@+id/cosBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="cos"
                        android:textSize="20dp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/orange">
                    </Button>
                    <Button
                        android:id="@+id/tanBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="tan"
                        android:textSize="20dp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/orange">
                    </Button>
                    <Button
                        android:id="@+id/logBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="log"
                        android:textSize="20dp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/orange">
                    </Button>
                    <Button
                        android:id="@+id/lnBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="ln"
                        android:textSize="20dp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/orange">
                    </Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="5"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/facbtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="x!"
                        android:textSize="20dp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/orange">
                    </Button>
                    <Button
                        android:id="@+id/squareBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="x²"
                        android:textSize="20dp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/orange">
                    </Button>
                    <Button
                        android:id="@+id/powFuncBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="xⁿ"
                        android:textSize="20dp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/orange">
                    </Button>
                    <Button
                        android:id="@+id/expBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="e"
                        android:textSize="20dp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/orange">
                    </Button>
                    <Button
                        android:id="@+id/ePowNBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="eⁿ"
                        android:textSize="20dp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/orange">
                    </Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="5"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/sqrtBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="√x"
                        android:textSize="20dp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/orange">
                    </Button>
                    <Button
                        android:id="@+id/cbrtBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="³√x"
                        android:textSize="20dp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/orange">
                    </Button>
                    <Button
                        android:id="@+id/NRootBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="ⁿ√x"
                        android:textSize="20dp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/orange">
                    </Button>
                    <Button
                        android:id="@+id/invBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="1/x"
                        android:textSize="20dp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/orange">
                    </Button>
                    <Button
                        android:id="@+id/divBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="÷"
                        android:textSize="20dp"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/orange">
                    </Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="7"
                        android:textSize="20dp"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/white">
                    </Button>
                    <Button
                        android:id="@+id/btn8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="8"
                        android:textSize="20dp"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/white">
                    </Button>
                    <Button
                        android:id="@+id/btn9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="9"
                        android:textSize="20dp"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/white">
                    </Button>
                    <Button
                        android:id="@+id/multiplyBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="×"
                        android:textSize="20dp"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/orange">
                    </Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="4"
                        android:textSize="20dp"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/white">
                    </Button>
                    <Button
                        android:id="@+id/btn5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="5"
                        android:textSize="20dp"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/white">
                    </Button>
                    <Button
                        android:id="@+id/btn6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="6"
                        android:textSize="20dp"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/white">
                    </Button>
                    <Button
                        android:id="@+id/minusBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="−"
                        android:textSize="20dp"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/orange">
                    </Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="1"
                        android:textSize="20dp"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/white">
                    </Button>
                    <Button
                        android:id="@+id/btn2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="2"
                        android:textSize="20dp"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/white">
                    </Button>
                    <Button
                        android:id="@+id/btn3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="3"
                        android:textSize="20dp"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/white">
                    </Button>
                    <Button
                        android:id="@+id/plusBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="+"
                        android:textSize="20dp"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/orange">
                    </Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/piBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="π"
                        android:textSize="20dp"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/orange">
                    </Button>
                    <Button
                        android:id="@+id/btn0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="0"
                        android:textSize="20dp"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/white">
                    </Button>
                    <Button
                        android:id="@+id/dotBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="."
                        android:textSize="20dp"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/orange">
                    </Button>
                    <Button
                        android:id="@+id/equalbtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="="
                        android:textSize="20dp"
                        android:backgroundTint="@color/darkgrey"
                        android:textColor="@color/orange">
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>